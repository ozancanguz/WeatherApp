<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFDDCC"
   android:padding="10dp"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Rv_iconimageview"
        android:layout_width="180dp"
        android:layout_height="270dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Rv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_margin="3dp"
            android:text="03/02/2023"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Monday"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Clear"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="31"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_mindegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="3"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_maxdegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="20"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="10"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/Rv_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="17"
            android:textSize="20sp"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>